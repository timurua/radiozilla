{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Radiozilla Job",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                "ENV_FILE": "${workspaceFolder}/backend/config/.env.local"
            }
        },
        {
            "name": "Debug Scraper Job",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apps/scraperjob/main.py",
            "console": "integratedTerminal",
            "args": [
                "-channel",
                "https://www.llamaindex.ai/",
            ],
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}/apps",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/apps",
                "ENV_FILE": "${workspaceFolder}/apps/config/.env.local.gcp"
            }
        },
        {
            "name": "Debug Summarizer Job",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apps/summarizerjob/main.py",
            "console": "integratedTerminal",
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}/apps",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/apps",
                "ENV_FILE": "${workspaceFolder}/apps/config/.env.local.gcp"
            }
        },
        {
            "name": "Debug Publisher Job",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apps/publisherjob/main.py",
            "console": "integratedTerminal",
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}/apps",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/apps",
                "ENV_FILE": "${workspaceFolder}/apps/config/.env.local.gcp"
            }
        },
        {
            "name": "Debug apiservice (uvicorn)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "apiservice.backend.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}/apps",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/apps",
                "ENV_FILE": "${workspaceFolder}/apps/config/.env.local.gcp"
            }
        },
        {
            "name": "Next.js: debug full stack",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/apps/website",
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Next.js: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/apps/website",
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },
    ]
}